# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ragdb
DB_USER=raguser
DB_PASSWORD=changeme

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents

# JWT
JWT_SECRET_KEY=your-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# OpenAI
OPENAI_API_KEY=your-openai-api-key
# Model for generating chat answers (default: gpt-3.5-turbo)
OPENAI_CHAT_MODEL=gpt-4o
# Model for query reformulation (default: gpt-3.5-turbo)
OPENAI_REFORMULATION_MODEL=gpt-3.5-turbo

# Firebase Authentication (Optional)
# Firebase Admin SDK service account JSON as a string
# Get this from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
# NOTE: If not provided, the application will fall back to legacy JWT authentication
# FIREBASE_ADMIN_SDK_JSON='{"type": "service_account", "project_id": "your-project-id", ...}'

# Okta Configuration (for SAML integration via Firebase)
# These are optional and only needed if using Okta SAML provider
OKTA_CLIENT_ID=OKTA_CLIENT_ID
OKTA_CLIENT_SECRET=OKTA_CLIENT_SECRET
OKTA_DOMAIN=OKTA_DOMAIN
OKTA_REDIRECT_URI=http://localhost:8000/callback
OKTA_API_TOKEN=OKTA_API_TOKEN
OKTA_API_AUDIENCE=OKTA_API_AUDIENCE

# SharePoint/OneDrive Provider Configuration
# Enable Microsoft 365 file sync (OneDrive & SharePoint)
ENABLE_SHAREPOINT_PROVIDER=false

# Microsoft App Registration (Azure AD)
# Required if SharePoint provider is enabled
# Register app at: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
# SP_CLIENT_ID=your-azure-app-client-id
# SP_CLIENT_SECRET=your-azure-app-client-secret
# SP_REDIRECT_URI=http://localhost:8000/api/v1/providers/sharepoint/auth/callback

# Token Encryption
# Generate a Fernet key for encrypting OAuth tokens at rest
# Run: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=your-fernet-encryption-key-here

# Application
APP_NAME=RAG_RBAC_System
DEBUG=True